2)  

echo "1.volume of sphere"
echo "2.volume of cube"
echo "3.volume of cylinder"
echo "enter your choice"
read x
case $x in
1)echo "enter the radius sphere"
   read r
   z=$((r*r*r*4*22))
   k=$((z/21))
   echo volume of sphere $k
   ;;
2)echo "enter the length of cube"
   read q
   s=$((q*q*q))
   echo "volume of square" $s;;
3)echo "enter the radius and height of cylinder"
    read r
    read x
   s=$((22*r*r*x))
   q=$((s/7))
   echo "volume of cylinder" $q;;
*)echo invalid choice;;
esac




